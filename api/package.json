{
  "name": "my-finances-api",
  "version": "0.0.1",
  "description": "Express based API",
  "main": "index.js",
  "scripts": {
    "test": "tap --no-coverage test/**/*.test.js | pino-pretty --colorize --hideObject",
    "test.only": "tap --no-coverage --only --no-timeout test/**/*.test.js",
    "test.coverage": "tap test/**/*.test.js --100",
    "docker.build": "docker build -t my-finances-api .",
    "docker.run": "docker run -d -p 8080:8080 --name my-finances my-finances-api",
    "docker.stop": "docker stop my-finances && docker container rm my-finances",
    "docker.interact": "docker run -it my-finances-api /bin/sh",
    "gcp.build": "gcloud builds submit --tag gcr.io/my-finances-page/my-finances-api",
    "gcp.deploy": "gcloud beta run deploy my-finances-api --image gcr.io/my-finances-page/my-finances-api --platform managed --allow-unauthenticated --region=europe-west1 --memory=256Mi"
  },
  "author": "mike.evans@numical.com",
  "license": "UNLICENCED",
  "dependencies": {
    "body-parser": "^1.19.0",
    "common-tags": "^1.8.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "my-finances-common": "workspace:^0.0.1",
    "pino": "^6.11.1",
    "pino-http": "^5.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "tap": "^14.11.0"
  }
}